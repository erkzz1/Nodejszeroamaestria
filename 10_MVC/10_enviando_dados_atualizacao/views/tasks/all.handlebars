<h1>Todas as tasks</h1>
<ul class='task-list'>
  {{#each tasks}}
    <li>
      <a href='/' class='title'>{{this.title}}</a>
      <div class='actions'>
        <a href=''><i class='bi bi-check2-square'></i></a>
        <a href='/tasks/edit/{{this.id}}'><i class='bi bi-pencil-square'></i></a>
        <form action='/tasks/remove' method='POST'>
          <input type='hidden' name='id' value='{{this.id}}'>
          <button type='submit'>
            <i class='bi bi-x-square'></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>